{
  "extends": "prowo-tsc/nextjs.json",
  "exclude": [".next", "node_modules", "dist", "build", "out"],
  "compilerOptions": {
    "paths": {
      "#env": ["./src/env.js"],
      "#flags": ["./src/server/flags.ts"],
      "#utility": ["./src/server/utility.ts"],
      "~/*": ["./src/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ]
}
