{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://projektwoche.djs-foundation.org/schemas/projects.json",
  "title": "Projektwoche Projects Configuration",
  "description": "Schema for the projects.json configuration file used in the Projektwoche application",
  "type": "object",
  "required": ["activeYear", "workshops"],
  "properties": {
    "activeYear": {
      "type": "integer",
      "description": "The currently active year for the workshop",
      "minimum": 2020,
      "maximum": 3000
    },
    "workshops": {
      "type": "object",
      "description": "Workshop data organized by year",
      "patternProperties": {
        "^[0-9]{4}$": {
          "type": "object",
          "description": "Workshop data for a specific year",
          "patternProperties": {
            "^!$": {
              "type": "object",
              "description": "Special entry for workshop metadata",
              "required": ["displayName"],
              "properties": {
                "displayName": {
                  "type": "string",
                  "description": "Display name for the workshop year"
                },
                "site": {
                  "type": "string",
                  "description": "Path to the markdown file to be hosted for a year",
                  "pattern": "^/"
                }
              },
              "additionalProperties": false
            },
            "^[a-zA-Z0-9_-]+$": {
              "type": "object",
              "description": "Individual workshop participant data",
              "required": ["displayName"],
              "properties": {
                "displayName": {
                  "type": "string",
                  "description": "Display name of the workshop participant",
                  "minLength": 1
                },
                "projects": {
                  "type": "object",
                  "description": "Projects associated with this participant",
                  "patternProperties": {
                    "^[a-zA-Z0-9_-]+$": {
                      "type": "object",
                      "description": "Individual project data",
                      "required": ["name"],
                      "properties": {
                        "name": {
                          "type": "string",
                          "description": "Name of the project",
                          "minLength": 1
                        },
                        "description": {
                          "type": "string",
                          "description": "Optional description of the project"
                        },
                        "url": {
                          "type": "string",
                          "format": "uri",
                          "description": "Optional URL to the project"
                        },
                        "status": {
                          "type": "string",
                          "enum": [
                            "active",
                            "completed",
                            "paused",
                            "cancelled"
                          ],
                          "description": "Current status of the project"
                        },
                        "tags": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "description": "Tags associated with the project"
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "activeYear": 2025,
      "workshops": {
        "2025": {
          "!": {
            "displayName": "Die Neueröffnung der Athe Projektwoche 2025",
            "site": "/data/prowo-site/2025.md"
          },
          "JULian-11": {
            "displayName": "Julian",
            "projects": {
              "personal-website": {
                "name": "Persöhnliche Webseite",
                "description": "Eine persönliche Website mit Portfolio",
                "status": "active",
                "tags": ["web", "portfolio"]
              }
            }
          }
        }
      }
    }
  ]
}
